{
  "name": "portfolio-monorepo",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "bun run --cwd apps/web dev",
    "dev:workers": "bun run --cwd apps/workers dev",
    "build": "bun run --cwd apps/web build",
    "preview": "bun run --cwd apps/web preview",
    "deploy:workers": "bun run --cwd apps/workers deploy",
    "notion": "bun run --cwd apps/web notion",
    "notion-to-md": "bun run --cwd apps/web notion-to-md",
    "notion-format": "bun run --cwd apps/web notion-format",
    "format:check": "bun run --cwd apps/web format:check",
    "format:write": "bun run --cwd apps/web format:write"
  }
}
