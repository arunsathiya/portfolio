{
	"$schema": "https://biomejs.dev/schemas/2.3.15/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": ["**", "!!**/dist"]
	},
	"css": {
		"linter": {
			"enabled": false
		}
	},
	"formatter": {
		"enabled": false
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off",
				"noDoubleEquals": "off"
			},
			"correctness": {
				"noUnusedVariables": "off",
				"noUnusedImports": "off"
			},
			"style": {
				"useNodejsImportProtocol": "off",
				"useTemplate": "off",
				"noNonNullAssertion": "off"
			},
			"complexity": {
				"useLiteralKeys": "off"
			}
		}
	},
	"assist": {
		"enabled": false
	}
}
