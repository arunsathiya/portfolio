{
	"$schema": "https://biomejs.dev/schemas/2.3.15/schema.json",
	"vcs": {
		"enabled": false
	},
	"files": {
		"includes": ["**"]
	},
	"formatter": {
		"enabled": false
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"trailingCommas": "all",
			"semicolons": "always"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off",
				"noDoubleEquals": "off",
				"noGlobalIsNan": "off"
			},
			"correctness": {
				"noUnusedVariables": "off",
				"noUnusedImports": "off",
				"noUnusedFunctionParameters": "off"
			},
			"style": {
				"useNodejsImportProtocol": "off",
				"useTemplate": "off",
				"noNonNullAssertion": "off",
				"useImportType": "off"
			},
			"complexity": {
				"useLiteralKeys": "off",
				"useRegexLiterals": "off"
			}
		}
	},
	"assist": {
		"enabled": false
	}
}
